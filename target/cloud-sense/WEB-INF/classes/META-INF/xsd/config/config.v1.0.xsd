<?xml version="1.0" encoding="UTF-8"?>

<xsd:schema xmlns="http://docs.rackspacecloud.com/cloud-sense/sense-config/v1.0"
            targetNamespace="http://docs.rackspacecloud.com/cloud-sense/sense-config/v1.0"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:element name="config">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="defaults" minOccurs="0" maxOccurs="1" />
                <xsd:element ref="namespace" minOccurs="0" maxOccurs="1" />
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="defaults">
        <xsd:annotation>
            <xsd:documentation>
                Defines certain defaults which will be merged down into configuration elements that have comparable analogues
            </xsd:documentation>
        </xsd:annotation>

        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="author" minOccurs="0" maxOccurs="1" />
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="namespace">
        <xsd:annotation>
            <xsd:documentation>
                Describe an ATOMpub server
            </xsd:documentation>
        </xsd:annotation>

        <xsd:complexType>
            <xsd:sequence>
<!--                <xsd:element ref="adapters" minOccurs="1" maxOccurs="1" />-->
                <xsd:element ref="service" minOccurs="1" maxOccurs="unbounded" />
            </xsd:sequence>

            <xsd:attribute name="title" type="xsd:string" use="required" />
            <xsd:attribute name="url" type="xsd:string" use="required" />

            <xsd:attribute name="resource" type="xsd:string" />
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="property">
        <xsd:complexType>
            <xsd:attribute name="name" type="xsd:string" use="required" />
            <xsd:attribute name="value" type="xsd:string" use="required" />
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="service">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="feed" minOccurs="0" maxOccurs="unbounded" />
            </xsd:sequence>

            <xsd:attribute name="title" type="xsd:string" use="required" />

            <xsd:attribute name="adapter-ref" type="xsd:string" />
            <xsd:attribute name="adapter-class" type="xsd:string" />
            <xsd:attribute name="resource" type="xsd:string" />
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="service-extension">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="feed" minOccurs="0" maxOccurs="unbounded" />
            </xsd:sequence>

            <xsd:attribute name="id" type="xsd:string" use="required" />
            <xsd:attribute name="service-id" type="xsd:string" use="required" />
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="feed">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="author" minOccurs="0" maxOccurs="1" />
            </xsd:sequence>

            <xsd:attribute name="title" type="xsd:string" use="required" />
            <xsd:attribute name="resource" type="xsd:string" />
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="author">
        <xsd:complexType>
            <xsd:attribute name="name" type="xsd:string" use="required" />
        </xsd:complexType>
    </xsd:element>
</xsd:schema>